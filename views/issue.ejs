        <div class="container mt-3">
          <div class="form-group">
              <label for="search-query">Search by title and description:</label>
              <input type="text" id="search-query" class="form-control" placeholder="Enter search query">
          </div>
      </div>

    <!-- Filter by Labels -->
<div id="labels-filter">
  <!-- Labels checkboxes will be populated here -->
</div>

<!-- Filter by Author -->
<div id="author-filter">
  <!-- Author select will be populated here -->
</div>



    



      <div class="container mt-3">
          <table class="table table-bordered table-hover custom-table">
              <thead class="thead-dark">
                  <tr>
                      <th scope="col">Issue Title</th>
                      <th scope="col">Description</th>
                      <th scope="col">Author</th>
                      <th scope="col">Labels</th>
                  </tr>
              </thead>
              <tbody id="issue-table-body">
                  <% issues.forEach(issue => { %>
                      <tr>
                          <td class="font-weight-bold text-primary"><%= issue.issueTitle %></td>
                          <td><%= issue.description %></td>
                          <td><%= issue.Author %></td>
                          <td><%= issue.labels.join(', ') %></td>
                      </tr>
                  <% }); %>
              </tbody>
          </table>
      </div>
  
        
        
        
        
        
        


      <div class="container mt-5">
        <h1 id="create-issue" class="display-4 text-primary text-center">Create Issue for <%= project.projectTitle %></h1>
        <form action="/projects/<%= project._id %>/new-issue" method="POST">
          <div class="form-group">
            <label for="issueTitle">Issue Title:</label>
            <input type="text" class="form-control" id="issueTitle" name="issueTitle" placeholder="Enter issue title" required>
          </div>
          <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" id="description" name="description" rows="4" placeholder="Enter issue description" required></textarea>
          </div>
          <div class="form-group">
            <label for="Author">Author:</label>
            <input type="text" class="form-control" id="Author" name="Author" placeholder="Enter author name" required>
          </div>
          <div class="form-group">
            <label for="labels">Labels (comma-separated):</label>
            <input type="text" class="form-control" id="labels" name="labels" placeholder="Enter labels (for example: Bugs, New feature, patch)">
          </div>
          <button type="submit" class="btn btn-primary">Create Issue</button>
        </form>
      </div>


      
<!-- Back to Top Button and UP-Arrow-->
<div class="back-to-top">
  <a href="#top">Go to Top <i class="fa-solid fa-circle-up fa-flip"></i> </a>
</div>

        
      
<script src="/assets/JavaScript/issue.script.js"></script> 
</body>
