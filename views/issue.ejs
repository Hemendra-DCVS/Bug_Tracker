          <!-- Left side of the navbar -->
          <a class="navbar-brand" href="#">
            <i class="fas fa-bug"></i> <!-- Font Awesome Bug icon -->
            Issue Tracker
          </a>
          
          <!-- Right side of the navbar -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" id="issue-create" href="#create-issue">Create issue</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#view-issues">View issues</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

     
      


      <div class="container mt-5">
        <h1 class="display-4 text-primary" id="view-issues">Issues for <%= project.projectTitle %> </h1>
      
